<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.controlderuta.guardianroute.CreateRouteActivity">

    <include layout="@layout/actionbar_toolbar"/>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingLeft="@dimen/marginBottom"
            android:paddingRight="@dimen/marginBottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crea tu primer grupo de usuarios de ruta y comunicalo via whatsapp, facebook, twitter, entre otros."
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="17dp"

                />




            <Button
                android:id="@+id/btnSigCrearRuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CREA UNA RUTA"
                android:theme="@style/RaisedButtonDark"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/marginBottom"
                />



        </LinearLayout>





</android.support.design.widget.CoordinatorLayout>




