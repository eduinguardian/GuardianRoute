<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.controlderuta.guardianroute.FirtsRutaActivity">



    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">



        <TextView

            android:id="@+id/codigoruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:text="Codigo de la ruta"
            android:layout_marginBottom="20dp"


        />

        <Button
            android:id="@+id/btnsigprimero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sig"
            android:theme="@style/RaisedButtonDark"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/marginBottom"
            android:layout_marginRight="@dimen/marginBottom"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"


            />

    </LinearLayout>





</android.support.constraint.ConstraintLayout>
